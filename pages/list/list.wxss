.btnbox {
  width: 750rpx;
  /* height: 100rpx; *//* border-radius: 9px; */
  position: relative;
  overflow: hidden;
  border: 10px;
}

.btnbox .btn {
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border: 0;
  opacity: 0;
  background: transparent;
  z-index: 9;
}


.btnbox .text {
  width: 100%;
  /* height: 100rpx; */
  background: #fff;
  /* color: #000; */
