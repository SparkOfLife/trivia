/* pages/calendar/calendar.wxss */
@import '../../template/calendar/index.wxss';
.container{
	/* margin:20rpx; */
  margin-top: 1rpx;
	padding-top:1rpx;
  padding-bottom: 0;
  width: 100%;
	background-color: #f1f1f1;
  margin-bottom: 1rpx;
}

.list-item{
	/* padding:24rpx 30rpx 24rpx 80rpx;  */
	position: relative;
  /* margin-top: 10rpx; */
  margin-bottom: 1rpx;
}
.btnbox {
  width: 750rpx;
  /* height: 100rpx; *//* border-radius: 9px; */
  position: relative;
  overflow: hidden;
  border: 10px;
}

.btnbox .btn {
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border: 0;
  opacity: 0;
  background: transparent;
  z-index: 9;
}


.btnbox .text {
  margin-left:40rpx;
  margin-right: 40rpx;
  /* height: 100rpx; */
  background: #fff;
  /* color: #000; */
  line-height: 110rpx;
  /* font-size: 50rpx; */
  text-align: left;
  /* font-weight: bold; */
  /* 超出一行文字自动隐藏 */
  overflow:hidden; 
  /* 文字隐藏后添加省略号 */
  text-overflow:ellipsis;
  /* 强制不换行 */
  white-space:nowrap; 
}

.round-click {
  background: transparent;
  position: fixed;
  bottom: 120rpx;
  right: 325rpx;
  z-index: 9;
}
.addition {
  float: left;
  background: transparent;
  height: 100rpx;
  width: 100rpx;
}


