/* pages/lists/lists.wxss */

.slider-handle {
  /* height: 150rpx; */
  width: 400rpx;
  background-color: #fff;
  border: none;
}

.btnbox {
  width: 750rpx;
  /* height: 100rpx; *//* border-radius: 9px; */
  position: relative;
  overflow: hidden;
  border: 10px;
}

.btnbox .btn {
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border: 0;
  opacity: 0;
  background: transparent;
  z-index: 9;
}

.btnbox .text {
  width: 100%;
  /* height: 100rpx; */
  background: #fff;
  color: #000;
  line-height: 100rpx;
  /* font-size: 50rpx; */
  text-align: left;
  /* font-weight: bold; */
}

.round-click {
  background: transparent;
  position: fixed;
  bottom: 75rpx;
  right: 95rpx;
  z-index: 9;
}
.addition {
  float: left;
  background: transparent;
  height: 100rpx;
  width: 100rpx;
}

.status{  
	height:80rpx;  
	margin-bottom: 20rpx;
	text-align: center;
	font-size: 0;
}
.status_item{
	width: 33.33%;
	height: 80rpx;
	line-height: 80rpx; 
	display: inline-block;
  	box-sizing: border-box;
  	background-color: #fff;
	font-size: 14px;
}
.active{
	border-bottom:4rpx solid #1180ff;
}
.list_item{
	padding:24rpx 30rpx 24rpx 80rpx; 
	background-color: #fff;
	position: relative;
	margin-bottom: 10rpx;
}
.list_item icon{
	position: absolute;
	top:24rpx;
	left:24rpx; 
}
.list_item .title{
	font-size: 13px;
	margin-bottom:18rpx; 
}	
.list_item .content{
	font-size: 12px;
}
.list_item .content .import{
	float: right;
	color:#f52728;
}
.addbtn{
	position: fixed;
	width: 160rpx;
	height: 136rpx; 
	text-align: center;
	bottom:80rpx;
	right:80rpx;
	color:#1180ff; 
}
.addbtn navigator{ 
  width: 96rpx;
	height: 96rpx; 
	border-radius: 50%;
  display: block;
  margin:0 auto;
}
.addbtn i{
	font-size:96rpx;  
} 